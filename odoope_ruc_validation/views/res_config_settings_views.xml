<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.einvoice</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoicing_settings']" position="after">
                <h2>Ruc Validation</h2>
                <div class="row mt16 o_settings_container" id="ruc_validation_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="ruc_validation" class="col-lg-3 o_light_label"/>
                                    <field name="ruc_validation" />
                                </div>
                            </div>
                                                         
                        </div>
                    </div>
                   
                </div>
                <h2>Dni Validation</h2>
                <div class="row mt16 o_settings_container" id="dni_validation_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="dni_validation" class="col-lg-3 o_light_label"/>
                                    <field name="dni_validation" />
                                </div>
                            </div>
                                                         
                        </div>
                    </div>
                   
                </div>
            </xpath>
        </field>
    </record>
</odoo>
