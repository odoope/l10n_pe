<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="validation_info_view_form" model="ir.ui.view">
        <field name="name">Validation Info Form</field>
        <field name="model">validation.info</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="cover_image" widget='image' class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="number"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="phone"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Validation Info Lines">
                            <field name="validation_ips">
                                <tree editable="bottom" delete="1">
                                    <field name="number_consult"/>
                                    <field name="create_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="validation_info_view_tree" model="ir.ui.view">
        <field name="name">Validation Info</field>
        <field name="model">validation.info</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="number"/>
            </tree>
        </field>
    </record>

    <!-- action and menus -->
    <record id='validation_info_action' model='ir.actions.act_window'>
        <field name="name">Validation Info</field>
        <field name="res_model">validation.info</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Validation Info Data" id="validation_info_base_menu" />
    <menuitem name="Company" id="validation_info_menu" parent="validation_info_base_menu" action="validation_info_action"/>

</odoo>
